/* miniprogram/pages/chat/chat.wxss */

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #EDEDED;
  position: relative;
}

/* ===== 消息列表 ===== */
.message-list {
  flex: 1;
  overflow: hidden;
  padding: 20rpx 0 0;
}

.list-bottom-padding {
  height: 180rpx;
}

/* ===== 消息行 ===== */
.message-row {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  padding: 12rpx 24rpx;
  margin-bottom: 8rpx;
}

/* 用户消息靠右 */
.message-row-user {
  flex-direction: row-reverse;
}

/* Bot 消息靠左 */
.message-row-bot {
  flex-direction: row;
}

/* ===== 头像 ===== */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  background-color: #CCCCCC;
}

.avatar-bot {
  margin-right: 16rpx;
  background: linear-gradient(135deg, #07C160, #06AD56);
}

.avatar-user {
  margin-left: 16rpx;
  background: linear-gradient(135deg, #5B9CF6, #3B82F6);
}

/* ===== 气泡 ===== */
.bubble {
  max-width: 560rpx;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  position: relative;
}

/* 用户气泡：绿色 */
.bubble-user {
  background: linear-gradient(135deg, #07C160, #05A352);
  border-bottom-right-radius: 6rpx;
}

.bubble-user .bubble-text {
  color: #FFFFFF;
}

/* Bot 气泡：白色 */
.bubble-bot {
  background-color: #FFFFFF;
  border-bottom-left-radius: 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.bubble-bot .bubble-text {
  color: #333333;
}

/* 错误消息文字 */
.bubble-error {
  color: #FF4D4F !important;
}

/* 气泡文字 */
.bubble-text {
  font-size: 28rpx;
  line-height: 1.65;
  word-break: break-all;
}

/* ===== Loading 三点动画 ===== */
.bubble-loading {
  padding: 28rpx 36rpx;
  min-width: 100rpx;
}

.loading-dots {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #07C160;
  animation: dotFlash 1.4s infinite ease-in-out both;
}

.dot-1 {
  animation-delay: 0s;
}

.dot-2 {
  animation-delay: 0.2s;
}

.dot-3 {
  animation-delay: 0.4s;
}

@keyframes dotFlash {
  0%, 80%, 100% {
    transform: scale(0.7);
    opacity: 0.4;
  }
  40% {
    transform: scale(1.1);
    opacity: 1;
  }
}

/* ===== 底部输入栏 ===== */
.input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #F7F7F7;
  border-top: 1rpx solid #E5E5E5;
  padding: 16rpx 24rpx 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 100;
}

.input-field {
  flex: 1;
  background-color: #FFFFFF;
  border-radius: 48rpx;
  padding: 18rpx 32rpx;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #E0E0E0;
  min-height: 72rpx;
  line-height: 1.5;
}

.input-placeholder {
  color: #BBBBBB;
  font-size: 28rpx;
}

.send-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  flex-shrink: 0;
  border: none;
  padding: 0;
  transition: background-color 0.2s;
}

.send-btn-active {
  background: linear-gradient(135deg, #07C160, #06AD56);
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.4);
}

.send-btn-disabled {
  background-color: #CCCCCC;
}

.send-btn-active:active {
  opacity: 0.85;
  transform: scale(0.95);
}

.send-icon {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1;
}

/* ===== 右下角转人工按钮 ===== */
.contact-btn {
  position: fixed;
  right: 32rpx;
  bottom: 160rpx;
  z-index: 200;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.18);
}
