/* miniprogram/pages/index/index.wxss */

.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
}

/* ===== Banner 区域 ===== */
.banner {
  background: linear-gradient(145deg, #07C160 0%, #05A352 60%, #048A45 100%);
  padding: 80rpx 48rpx 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.banner::before {
  content: '';
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 240rpx;
  height: 240rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.banner::after {
  content: '';
  position: absolute;
  bottom: -60rpx;
  left: -60rpx;
  width: 180rpx;
  height: 180rpx;
  background: rgba(255, 255, 255, 0.06);
  border-radius: 50%;
}

.banner-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.2));
}

.banner-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.banner-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 2rpx;
}

.banner-wave {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 32rpx;
  background: #F5F5F5;
  border-radius: 32rpx 32rpx 0 0;
}

/* ===== 功能卡片区域 ===== */
.features-section {
  padding: 40rpx 32rpx 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 28rpx;
  display: block;
}

.feature-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.feature-icon-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 28rpx;
}

.feature-icon-blue {
  background: linear-gradient(135deg, #E8F4FE, #C8E6FD);
}

.feature-icon-orange {
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
}

.feature-icon-green {
  background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
}

.feature-icon {
  font-size: 44rpx;
}

.feature-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.feature-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #222222;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #888888;
  line-height: 1.6;
}

/* ===== 操作按钮区域 ===== */
.action-section {
  padding: 24rpx 32rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-start {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #07C160 0%, #06AD56 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  height: 100rpx;
  border: none;
  box-shadow: 0 8rpx 28rpx rgba(7, 193, 96, 0.40);
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.btn-start:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.btn-start-icon {
  margin-right: 12rpx;
  font-size: 36rpx;
}

.btn-start-text {
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.btn-copy {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  color: #07C160;
  border-radius: 48rpx;
  height: 100rpx;
  border: 2rpx solid #07C160;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.btn-copy:active {
  background-color: #F0FFF6;
}

.btn-copy-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.btn-copy-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #07C160;
}

/* ===== 底部版权 ===== */
.footer {
  margin-top: auto;
  padding: 24rpx 32rpx 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-text {
  font-size: 22rpx;
  color: #BBBBBB;
  letter-spacing: 1rpx;
}
